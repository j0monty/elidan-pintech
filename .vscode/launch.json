{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach to process",
            "type": "debugpy",
            "request": "attach",
            "justMyCode": true,
            "redirectOutput": true,
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
        }
    ]
}
